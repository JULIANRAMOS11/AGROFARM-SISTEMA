-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.agrofarm.app">

    <!-- ⚠️ PERMISOS OBLIGATORIOS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AgroFarmApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgroFarm"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- ════════════════════════════════ -->
        <!-- ACTIVITY PRINCIPAL (LOGIN) -->
        <!-- ════════════════════════════════ -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AgroFarm.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ════════════════════════════════ -->
        <!-- OTRAS ACTIVITIES -->
        <!-- ════════════════════════════════ -->
        
        <!-- Dashboard Principal -->
        <activity
            android:name=".ui.main.DashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.AgroFarm" />
        
        <!-- Registro -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.AgroFarm.NoActionBar" />
        
        <!-- Gestión de Cerdos -->
        <activity
            android:name=".ui.pigs.PigsActivity"
            android:exported="false"
            android:label="Gestión de Cerdos" />
        
        <!-- Detalle de Cerdo -->
        <activity
            android:name=".ui.pigs.PigDetailActivity"
            android:exported="false"
            android:label="Detalle del Cerdo" />
        
        <!-- Crear/Editar Cerdo -->
        <activity
            android:name=".ui.pigs.PigFormActivity"
            android:exported="false"
            android:label="Formulario de Cerdo" />
        
        <!-- Nutrición -->
        <activity
            android:name=".ui.nutricion.NutricionActivity"
            android:exported="false"
            android:label="Nutrición" />
        
        <!-- Sanidad -->
        <activity
            android:name=".ui.sanidad.SanidadActivity"
            android:exported="false"
            android:label="Sanidad" />
        
        <!-- Perfil -->
        <activity
            android:name=".ui.perfil.PerfilActivity"
            android:exported="false"
            android:label="Mi Perfil" />

    </application>

</manifest>
